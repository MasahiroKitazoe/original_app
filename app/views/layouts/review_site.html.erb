<!DOCTYPE html>
<html>
<head>
  <title>OriginalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBRCB2MqZELwZgH6Ix1O0QYD7KLf4jlSTU"></script>
<script src='//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js'></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">ふぉと場所</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <%= form_tag('/subjects/search', method: :get, class: "navbar-form navbar-left") do %>
          <div class="form-group">
            <input name="keyword" type="text" class="form-control" placeholder="キーワードで検索">
      </div>
            <button type="submit" class="btn btn-default">Submit</button>
        <% end %>

      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "サインアウト", "/users/sign_out", method: :delete %>
          </li>
          <li>
            <a href="/users/<%= current_user.id %>">マイページ</a>
          </li>
        <% else %>
          <li>
            <a href="/users/sign_in">ログイン</a>
          </li>
          <li>
            <a href="/users/sign_up">新規登録</a>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>

<%= yield %>

</body>
</html>
