            <ul>
              <% @subjects.each do |subject| %>
                <li>
                    <a href="/subjects/<%= subject.id %>">
                      <% if subject.images.present? %>
                        <%= image_tag(subject.images.order('created_at ASC').first.image_file.url, :size=> "480x390") %>
                      <% end %>
                    <h3><%= subject.name %></h3></a>
                    <% if subject.reviews.present? %>
                      <span class="rate rate<%= (subject.reviews.average(:rate).round(1) * 10).floor %>"></span>
                    <% end %>
                </li>
              <% end %>
              </ul>

                <form accept-charset="utf-8" action="/" method="get">
                </form>