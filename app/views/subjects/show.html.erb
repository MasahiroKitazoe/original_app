            <div class="container">
              <header class="header header--section">
                <h2 class="text-middle">
                  <i class="icon-movie color-gray-light"></i><%= @subject.name %>
                </h2>
              </header>
              <div style="text-align: right">
                <a href="/subjects/<%= @subject.id %>/reviews/new">この被写体の評価をする</a>
              </div>
              <% if @subject.reviews.present? %>
                <p class="text-small">
                          <span class="rating-star"><i class="star-actived rate-<%= @subject.reviews.find(1).rate %>0"></i></span>
                </p>
              <% end %>
              <header class="header header--section">
                <h2 class="text-middle">
                  <i class="icon-movie color-gray-light"></i>みんなのレビュー
                </h2>
              </header>
              <ul style="padding: 0">
                <% @subject.reviews.each do |review| %>
                  <li style="border-bottom: dotted 1px">
                    <div class="thumbnail__caption">
                      <h3 class="text-xsmall text-overflow" title="<%= review.user.nickname %>">
                        <%= review.user.nickname %><small 2014=""></small>
                      </h3>
                      <p class="text-small">
                        <span class="rating-star"><i class="star-actived rate-<%= review.rate %>0"></i></span>
                      </p>
                      <p>
                        <%= review.comment %>
                      </p>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>